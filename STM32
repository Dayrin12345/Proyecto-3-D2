/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;

UART_HandleTypeDef huart5;
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
uint8_t b1_pressed = 0;
uint8_t b2_pressed = 0;
uint8_t msg1[20] = "Temperatura: ";
uint8_t msg2[5] = "C\n";
uint8_t msg3[20] = "Guardadndo...\n";
float numero;
char buffer[20];
char comando1 = 'R';  // El comando que indica al ESP32 que mida la temperatura
char comando2 = 'G';  // El comando que indica al ESP32 que mida la temperatura
float temperatura;

/* USER CODE END PV */

